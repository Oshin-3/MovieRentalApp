@model IEnumerable<MovieRentalApp.Models.Movies>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<hr />
@if (!Model.Any())
{
    <h2>We don't have any movies yet!'</h2>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Title, "Details", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genres.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
